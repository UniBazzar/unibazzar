# Service Configuration
PORT=8084
ENVIRONMENT=development
LOG_LEVEL=info
SERVICE_NAME=ai-service

# API Configuration
API_PREFIX=/api/v1
MAX_REQUEST_SIZE=10485760  # 10MB
REQUEST_TIMEOUT=30

# Database Configuration (for metadata and analytics)
DATABASE_URL=postgresql+asyncpg://unibazzar:unibazzar123@localhost:5432/unibazzar

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/1
REDIS_PASSWORD=
REDIS_TTL=3600

# Vector Database Configuration (Qdrant)
VECTOR_DB_URL=http://localhost:6333
VECTOR_DB_COLLECTION=unibazzar_embeddings
VECTOR_DB_SIZE=384  # Dimension of embeddings

# ML Models Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_CACHE_SIZE=10000
MODEL_DEVICE=cpu  # or cuda if GPU available

# Content Moderation Models
MODERATION_MODEL=unitary/toxic-bert
MODERATION_THRESHOLD=0.7
HATE_SPEECH_THRESHOLD=0.6

# Recommendation Engine
RECOMMENDATION_MODEL=svd
MIN_INTERACTIONS=5
SIMILARITY_THRESHOLD=0.3
MAX_RECOMMENDATIONS=50

# Search Configuration
SEARCH_LIMIT=100
SEARCH_SIMILARITY_THRESHOLD=0.4
SEARCH_TIMEOUT=5

# Background Tasks (Celery)
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# Training Configuration
TRAINING_BATCH_SIZE=32
TRAINING_MAX_EPOCHS=10
MODEL_SAVE_PATH=./models/
TRAINING_DATA_PATH=./data/

# Observability Configuration
OTEL_ENDPOINT=http://localhost:4317
JAEGER_ENDPOINT=http://localhost:14268/api/traces
METRICS_PORT=8094

# External Services
LISTING_SERVICE_URL=http://localhost:8082
ORDER_SERVICE_URL=http://localhost:8083
AUTH_SERVICE_URL=http://localhost:8081

# Security Configuration
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=3600
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Feature Flags
ENABLE_REAL_TIME_RECOMMENDATIONS=true
ENABLE_CONTENT_MODERATION=true
ENABLE_SEMANTIC_SEARCH=true
ENABLE_TRAINING_ENDPOINTS=false  # Set to true only in development

# Data Processing
MAX_BATCH_SIZE=1000
EMBEDDING_BATCH_SIZE=100
UPDATE_FREQUENCY=3600  # seconds

# Model Performance
EMBEDDING_TIMEOUT=10
RECOMMENDATION_TIMEOUT=15
MODERATION_TIMEOUT=5

# Hugging Face Configuration (if using HF models)
HF_TOKEN=your-huggingface-token-here
HF_CACHE_DIR=./cache/huggingface

# AWS Configuration (for production model storage)
AWS_S3_BUCKET=unibazzar-models
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
